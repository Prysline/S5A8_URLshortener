<div class="text-start">
  <h1>Success! Please use this link:</h1>
  <h3><a id="short-url" href="http://localhost:3000/{{shortingUrl}}"
      target="_blank">http://localhost:3000/{{shortingUrl}}</a></h3>
</div>
<div class="d-grid gap-2 col-3 mx-auto btn-lg">
  <a tabindex="0" class="btn btn-primary my-2" id="copy-button" role="button" data-bs-toggle="popover"
    data-bs-placement="top" data-bs-trigger="focus" data-bs-content="copied!">
    Copy</a>
</div>

<script>
  const copyButton = document.querySelector('#copy-button')
  copyButton.addEventListener('click', function onCopyButtonClicked(e) {
    const copyText = document.querySelector('#short-url')
    navigator.clipboard.writeText(copyText.innerText)
  })
</script>